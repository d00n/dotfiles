LIGHT_RED="\[\033[00;31m\]"
LIGHT_BLUE="\[\033[01;34m\]"
CYAN="\[\033[01;36m\]"
YELLOW="\[\033[01;33m\]"
GREEN="\[\033[00;32m\]"
PURPLE="\[\033[01;35m\]"
LIGHT_GREEN="\[\033[01;32m\]"
DARK_GRAY="\[\033[01;30m\]"
LIGHT_GRAY="\[\033[00;37m\]"
END_COLOR="\[\033[00m\]"

GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_SHOWUNTRACKEDFILES=1

export VIRTUAL_ENV_DISABLE_PROMPT=true
VIRT_ENV=""
if [ -n "$VIRTUAL_ENV" ] ; then
	VIRT_ENV="$PURPLE[`basename \"$VIRTUAL_ENV\"`]$END_COLOR"
fi

export PS1="\n\n$VIRT_ENV$CYAN[\u@$END_COLOR$LIGHT_RED\h]$END_COLOR$YELLOW[\w]$END_COLOR$GREEN\$(__git_ps1 '[%s]')$END_COLOR\n $LIGHT_BLUE\$$END_COLOR "
